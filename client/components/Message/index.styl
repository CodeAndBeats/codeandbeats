@require 'nib'

.message-component
  transition: all .5s
  absolute: bottom left right
  width: 100%
  height: 50px
  background: red
  opacity: 0
  text-align: center
  cursor: pointer
  &.animated
    opacity: 1
  .text
    position: relative
    transform: translateY(-50%)
    top: 50%
    color: #fff

